    <header class="masthead d-flex">
        <div class="container my-auto">

            <div class="col-xs-12 col-md-2 col-md-pull-9">
                <div class="panel panel-default">
                    <div class="card">
                        <div class="d-grid gap-3">
                            <button type="button" class="btn btn-outline-warning textPurple" data-bs-toggle="modal"
                                data-bs-target="#loginModal">
                                Login
                            </button>
                        </div>
                        <div class="d-grid gap-3">
                            <button type="button" class="btn btn-outline-warning textPurple" data-bs-toggle="modal"
